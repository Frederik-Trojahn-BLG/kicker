<div class="container-fluid">
    <h1>{{model.team.name}}</h1>

    <div class="btn-group">
        <button class="btn btn-danger">Verlassen</button>
    </div>

    <div class="row">
        {{#if showError}}
            <div>{{errorMsg}}</div>
            <a {{action "hideError"}}>X</a>
        {{/if}}
        <div class="col-md-6">
            <h2>Mitglieder</h2>
            <div>
                {{#each model.team.members as |member|}}
                    <div>{{member.name}}</div>
                {{/each}}
            </div>
            <div class="form-group">
                <label>Einladen:</label>
                {{input type="text" value=filterName key-up="updateList" class="form-control"}}
                <div>
                    {{#each filteredAccounts as |a|}}
                        <div style="padding: 5px;">{{a.name}}
                            <button {{action "invite" a.id}} class="btn btn-xs btn-default">Einladen</button>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h2>Ligen</h2>
            {{#each model.team.leagues as |league|}}
                <div>{{league.name}}</div>
            {{/each}}
        </div>
    </div>

</div>

{{outlet}}