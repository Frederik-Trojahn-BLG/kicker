<table class="table table-condensed">
    <thead>
    <tr>
        <th>Team</th>
        <th>Aktionen</th>
    </tr>
    </thead>

    <tbody>
    {{#each teams as |team|}}
        <tr>
            <td>{{#link-to "kicker.teams.detail" team.id}}{{team.name}}{{/link-to}}</td>
            <td>
                <div class="btn-group btn-group-sm">
                    {{#link-to "kicker.teams.detail" team.id class="btn btn-default"}}Details{{/link-to}}
                    {{#link-to "kicker.teams.detail" team.id class="btn btn-default"}}Bearbeiten{{/link-to}}
                    {{#link-to "kicker.teams.detail" team.id class="btn btn-default"}}Einladen{{/link-to}}
                    {{#link-to "kicker.teams.detail" team.id class="btn btn-danger"}}Verlassen{{/link-to}}
                </div>
            </td>
        </tr>
    {{/each}}
    </tbody>

</table>
{{outlet}}
